{
  "$schema": "https://json.schemastore.org/design-tokens.json",
  "fontFamilies": {
    "serif": "Libre Baskerville",
    "sans": "Instrument Sans",
    "mono": "IBM Plex Mono"
  },
  "colors": {
    "primary": "#23201F",
    "primaryBody": "#3A3634",
    "secondary": "#6B6461",
    "meta": "#6B6461",
    "tertiary": "#8A8F94",
    "dividers": "rgba(47, 43, 42, 0.2)",
    "background": "#FCFCFC"
  },
  "spacing": {
    "0": "0px",
    "2": "2px",
    "4": "4px",
    "8": "8px",
    "12": "12px",
    "16": "16px",
    "20": "20px",
    "24": "24px",
    "32": "32px",
    "40": "40px",
    "48": "48px",
    "64": "64px",
    "80": "80px"
  },
  "radius": {
    "none": "0px",
    "xs": "4px",
    "sm": "6px",
    "md": "10px",
    "lg": "16px",
    "xl": "24px",
    "pill": "999px"
  },
  "typography": {
    "heroHeading": {
      "fontFamily": "{fontFamilies.serif}",
      "fontSize": "46px",
      "lineHeight": "1.1",
      "fontWeight": 400,
      "letterSpacing": "-0.02em"
    },
    "primaryHeading": {
      "fontFamily": "{fontFamilies.serif}",
      "fontSize": "30px",
      "lineHeight": "1.2",
      "letterSpacing": "-0.05em",
      "fontWeight": 400
    },
    "sectionTitleSans": {
      "fontFamily": "{fontFamilies.sans}",
      "fontSize": "30px",
      "lineHeight": "1.2",
      "letterSpacing": "0.01em",
      "fontWeight": 400
    },
    "subsectionSans": {
      "fontFamily": "{fontFamilies.sans}",
      "fontSize": "24px",
      "lineHeight": "1.3",
      "letterSpacing": "0.01em",
      "fontWeight": 500
    },
    "smallHeading": {
      "fontFamily": "{fontFamilies.sans}",
      "fontSize": "15px",
      "lineHeight": "1.5",
      "fontWeight": 500
    },
    "label": {
      "fontFamily": "{fontFamilies.serif}",
      "fontSize": "18px",
      "lineHeight": "1.6",
      "letterSpacing": "0.01em",
      "fontWeight": 500
    },
    "bodyPrimary": {
      "fontFamily": "{fontFamilies.sans}",
      "fontSize": "13px",
      "lineHeight": "1.6",
      "letterSpacing": "0.01em",
      "fontWeight": 400
    },
    "bodySecondary": {
      "fontFamily": "{fontFamilies.sans}",
      "fontSize": "12px",
      "lineHeight": "1.6",
      "fontWeight": 400,
      "letterSpacing": "-0.02em",
      "textTransform": "uppercase"
    },
    "metaCaption": {
      "fontFamily": "{fontFamilies.sans}",
      "fontSize": "16px",
      "lineHeight": "1.6",
      "fontWeight": 200
    },
    "metadata": {
      "fontFamily": "{fontFamilies.mono}",
      "fontSize": "11px",
      "lineHeight": "1.5",
      "fontWeight": 200,
      "letterSpacing": "0.06em",
      "textTransform": "uppercase"
    }
  }
}
